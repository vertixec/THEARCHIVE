<body class="antialiased selection:bg-acid selection:text-black">

    <div class="film-grain"></div>

    <!-- Pantalla de Carga -->
    <div id="loader" class="fixed inset-0 z-[100] bg-black flex flex-col items-center justify-center">
        <h1 class="font-anton text-6xl md:text-9xl tracking-tighter animate-pulse text-white uppercase">Archive</h1>
        <div class="w-64 h-1 bg-gray-800 mt-4 overflow-hidden">
            <div id="loading-bar" class="h-full bg-acid loading-bar"></div>
        </div>
        <div id="loader-status" class="font-mono text-[10px] text-gray-500 mt-2 uppercase tracking-widest">Iniciando protocolo...</div>
    </div>

    <!-- Navegación Simplificada -->
    <nav class="sticky top-0 z-50 bg-dark/95 backdrop-blur-md border-b border-white/10 h-[72px] flex justify-between items-center px-6">
        <div class="flex items-center gap-8">
            <div class="font-anton text-2xl tracking-tight leading-none cursor-pointer hover:text-acid transition-colors select-none uppercase" onclick="location.reload()">
                The<br>Archive
            </div>
            <div class="hidden md:block w-px h-8 bg-white/20"></div>
            <div class="flex gap-6 font-oswald text-sm tracking-widest text-white uppercase h-full items-center">
                <button onclick="switchTab('main')" id="tab-main" class="nav-tab active py-6 border-b-2 border-transparent hover:text-acid">
                    VISUALS
                </button>
                <button onclick="switchTab('systems')" id="tab-systems" class="nav-tab py-6 border-b-2 border-transparent hover:text-acid">
                    SYSTEMS
                </button>
                <button onclick="switchTab('community')" id="tab-community" class="nav-tab py-6 border-b-2 border-transparent hover:text-acid">
                    COMMUNITY
                </button>
            </div>
        </div>
        <div id="sync-indicator" class="font-mono text-[10px] text-gray-500 border border-white/10 px-3 py-1 rounded-full uppercase tracking-tighter">
            Estado: Desconectado
        </div>
    </nav>

    <!-- Contenido Dinámico -->
    <div id="view-content">
        <header class="pt-12 pb-6 px-6 bg-panel/30">
            <div class="w-full text-left">
                <div class="flex items-center gap-3 mb-4">
                    <span class="bg-acid text-black font-mono text-[10px] px-2 py-0.5 font-bold uppercase tracking-widest text-shadow">VERTIX ACADEMY</span>
                </div>
                <h1 id="view-title" class="font-anton text-6xl md:text-8xl text-white uppercase tracking-tighter leading-[0.8] mb-4">The Archive</h1>
                <p id="view-desc" class="font-mono text-xs text-white/60 border-l border-acid pl-4 max-w-lg uppercase tracking-wider">Archivo central de prompts y referencias creativas con IA.</p>
            </div>
        </header>

        <!-- Controles de Filtro -->
        <section class="sticky top-[72px] z-40 bg-dark/90 backdrop-blur-md border-y border-white/10 px-6 py-4">
            <div class="w-full flex flex-col md:flex-row gap-6 items-start md:items-center justify-between">
                <div class="flex flex-wrap gap-2" id="filter-controls">
                    <button onclick="setFilter('all')" id="filter-all" class="filter-btn active px-4 py-1.5 border border-white/20 font-mono text-[10px] uppercase tracking-widest transition-all">Todos los Registros</button>
                    <div id="dynamic-type-filters" class="flex gap-2"></div>
                </div>
                
                <div class="relative w-full md:w-64">
                    <input type="text" id="search-input" oninput="handleSearch()" placeholder="BUSCAR EN REGISTROS..." class="w-full bg-black border border-white/20 p-3 pl-10 font-mono text-[10px] text-acid focus:border-acid outline-none uppercase tracking-widest">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
            </div>
        </section>

        <!-- Grid Dinámico -->
        <main id="grid-container" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-[2px] p-[2px] min-h-screen pb-20"></main>
    </div>

    <div id="toast-container" class="fixed bottom-10 left-1/2 transform -translate-x-1/2 z-[60] flex flex-col items-center gap-2 pointer-events-none"></div>

    <script>
        const S_URL = "https://tskmcvnbtexfqojoixuv.supabase.co";
        const S_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRza21jdm5idGV4ZnFvam9peHV2Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjUzOTIyNDUsImV4cCI6MjA4MDk2ODI0NX0.zKqlLDTD0N6Ufb637GThBASw5OFLMggWCq1BHCLd830";
        
        let sb;
        try {
            sb = window.supabase.createClient(S_URL, S_KEY);
        } catch (e) { console.error("Supabase Error:", e); }

        let dbItems = [];
        let currentTypeFilter = 'all';
        let searchQuery = '';
        let currentActiveTab = 'main';

        window.onload = async () => {
            const bar = document.getElementById('loading-bar');
            setTimeout(() => bar.style.width = '100%', 100);
            await loadData();
            setTimeout(() => {
                document.getElementById('loader').style.opacity = '0';
                setTimeout(() => document.getElementById('loader').style.display = 'none', 800);
            }, 1200);
        };

        async function loadData() {
            const status = document.getElementById('loader-status');
            let table = 'prompts';
            if(currentActiveTab === 'systems') table = 'functional_prompts';
            if(currentActiveTab === 'community') table = 'community_visuals';
            
            status.innerText = `Accediendo a tabla: ${table}...`;
            
            if (!sb) return;
            const { data, error } = await sb.from(table).select('*').order('created_at', { ascending: false });

            if (error) {
                document.getElementById('sync-indicator').innerText = 'ERROR SYNC';
                document.getElementById('sync-indicator').className = 'font-mono text-[10px] text-danger border border-danger px-3 py-1 rounded-full uppercase tracking-tighter';
            } else {
                dbItems = data || [];
                document.getElementById('sync-indicator').innerText = 'SYNC ONLINE';
                document.getElementById('sync-indicator').className = 'font-mono text-[10px] text-acid border border-acid px-3 py-1 rounded-full uppercase tracking-tighter';
                generateTypeFilters();
                renderGrid();
            }
        }

        function switchTab(tabId) {
            currentActiveTab = tabId;
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.getElementById(`tab-${tabId}`).classList.add('active');
            
            const title = document.getElementById('view-title');
            const desc = document.getElementById('view-desc');
            const filterAllBtn = document.getElementById('filter-all');
            
            if (tabId === 'systems') {
                title.innerText = "Archive Systems";
                desc.innerText = "Casos de uso funcionales";
                filterAllBtn.innerText = "Todos los Sistemas";
            } else if (tabId === 'community') {
                title.innerText = "Community Hub";
                desc.innerText = "Visuales destacados creados por la comunidad.";
                filterAllBtn.innerText = "Toda la Comunidad";
            } else {
                title.innerText = "The Archive";
                desc.innerText = "Archivo central de prompts y referencias creativas con IA.";
                filterAllBtn.innerText = "Todos los Assets";
            }
            
            currentTypeFilter = 'all';
            loadData();
        }

        function generateTypeFilters() {
            const container = document.getElementById('dynamic-type-filters');
            container.innerHTML = '';
            
            let field = 'volume';
            if(currentActiveTab === 'systems') field = 'prompt_type';
            if(currentActiveTab === 'community') field = 'author';
            
            const types = [...new Set(dbItems.map(item => (item[field] || 'GENERAL').trim().toUpperCase()))].sort();
            
            types.forEach(t => {
                const btn = document.createElement('button');
                btn.className = `filter-btn px-4 py-1.5 border border-white/20 font-mono text-[10px] uppercase tracking-widest transition-all ${currentTypeFilter === t ? 'active' : ''}`;
                btn.innerText = t;
                btn.onclick = () => setFilter(t);
                container.appendChild(btn);
            });
        }

        function setFilter(type) {
            currentTypeFilter = type;
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.toggle('active', btn.innerText.trim().toUpperCase() === type || (type === 'all' && btn.id === 'filter-all'));
            });
            renderGrid();
        }

        function handleSearch() {
            searchQuery = document.getElementById('search-input').value.toLowerCase().trim();
            renderGrid();
        }

        function renderGrid() {
            const container = document.getElementById('grid-container');
            container.innerHTML = '';
            
            let typeField = 'volume';
            if(currentActiveTab === 'systems') typeField = 'prompt_type';
            if(currentActiveTab === 'community') typeField = 'author';

            const filtered = dbItems.filter(item => {
                const itemType = (item[typeField] || 'GENERAL').trim().toUpperCase();
                const matchesType = currentTypeFilter === 'all' || itemType === currentTypeFilter;
                
                const searchStr = (
                    (item.prompt_text || '') + 
                    (item.title || '') + 
                    (item.model || '') + 
                    (item.category || '') +
                    (item.volume || '') +
                    (item.prompt_type || '') +
                    (item.author || '')
                ).toLowerCase();
                
                const matchesSearch = !searchQuery || searchStr.includes(searchQuery);
                return matchesType && matchesSearch;
            });

            if (filtered.length === 0) {
                container.innerHTML = `<div class="col-span-full py-32 text-center font-mono text-gray-600 uppercase text-[10px] tracking-[0.2em]">0 REGISTROS ENCONTRADOS.</div>`;
                return;
            }

            filtered.forEach((item) => {
                const promptContent = (item.prompt_text || "IMAGE DATA").toString();
                const escapedPrompt = promptContent.replace(/'/g, "\\'").replace(/"/g, '&quot;');
                const date = item.created_at ? new Date(item.created_at).toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit' }) : "--/--";
                const displayImg = item.image_url || "https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=500";
                
                let cardTitle = 'ASSET';
                let secondaryLabel = 'VOL';
                let bottomLabel = 'CATEGORY';

                if(currentActiveTab === 'main') {
                    cardTitle = item.category || 'ASSET';
                    secondaryLabel = item.volume || 'VOL';
                    bottomLabel = 'CATEGORY';
                } else if(currentActiveTab === 'systems') {
                    cardTitle = item.title || 'SYSTEM';
                    secondaryLabel = item.prompt_type || 'TYPE';
                    bottomLabel = 'IDENTIFIER';
                } else if(currentActiveTab === 'community') {
                    cardTitle = item.author || 'COMMUNITY';
                    secondaryLabel = item.is_featured ? 'FEATURED' : 'MEMBER';
                    bottomLabel = 'AUTHOR';
                }

                const card = document.createElement('div');
                card.className = 'card-container perspective-1000 aspect-[3/4] cursor-pointer group';
                card.innerHTML = `
                    <div class="card-flip-inner preserve-3d relative h-full w-full">
                        <div class="absolute inset-0 backface-hidden bg-black border border-white/5 overflow-hidden">
                            <div class="scanline"></div>
                            <img src="${displayImg}" class="w-full h-full object-cover filter grayscale contrast-125 brightness-75 group-hover:grayscale-0 group-hover:brightness-100 group-hover:scale-105 transition-all duration-700 ease-out">
                            <div class="absolute top-3 left-3">
                                <span class="${secondaryLabel === 'FEATURED' ? 'bg-acid text-black' : 'bg-black/80 text-white'} backdrop-blur-md text-[8px] font-mono px-2 py-0.5 border border-white/10 tracking-widest uppercase">${secondaryLabel}</span>
                            </div>
                            <div class="absolute bottom-4 left-4 right-4">
                                <div class="font-anton text-xl text-white uppercase tracking-tighter leading-none">${cardTitle}</div>
                                <div class="w-0 group-hover:w-full h-0.5 bg-acid transition-all duration-500 mt-2"></div>
                            </div>
                        </div>
                        <div class="absolute inset-0 backface-hidden rotate-y-180 bg-panel border border-acid/30 p-5 flex flex-col justify-between overflow-hidden">
                            <div class="h-full flex flex-col">
                                <div class="flex justify-between items-start font-mono text-[9px] text-gray-500 border-b border-white/10 pb-3 mb-4 uppercase tracking-tighter">
                                    <div><div class="text-acid mb-1">MODEL: ${item.model || 'UNK'}</div><div>REF: ${item.id}</div></div>
                                    <div class="text-right"><div>DATE: ${date}</div></div>
                                </div>
                                <div class="flex-grow overflow-y-auto pr-2 scroll-custom">
                                    <div class="font-mono text-[10px] text-acid/80 uppercase tracking-widest mb-2 border-l-2 border-acid pl-2">DATA PROTOCOL:</div>
                                    <p class="font-mono text-[11px] text-white leading-relaxed uppercase opacity-90">${promptContent}</p>
                                </div>
                                <div class="mt-4 pt-4 border-t border-white/10 grid grid-cols-2 gap-2">
                                    <div class="bg-black/40 p-2 border border-white/5"><div class="font-mono text-[7px] text-gray-500 uppercase">${bottomLabel}</div><div class="font-oswald text-[10px] text-white uppercase">${cardTitle}</div></div>
                                    <div class="bg-black/40 p-2 border border-white/5"><div class="font-mono text-[7px] text-gray-500 uppercase">STATUS</div><div class="font-oswald text-[10px] text-white uppercase">${secondaryLabel}</div></div>
                                </div>
                            </div>
                            <button onclick="event.stopPropagation(); copyToClipboard('${escapedPrompt}', this)" class="w-full py-4 mt-4 bg-acid text-black font-anton uppercase transition-all hover:bg-white text-xl tracking-tighter">${currentActiveTab === 'community' ? 'Copy Model Info' : 'Copy Protocol'}</button>
                        </div>
                    </div>
                `;
                card.onclick = () => card.classList.toggle('flipped');
                container.appendChild(card);
            });
        }

        function showToast(msg) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast bg-black border border-acid px-8 py-4 shadow-2xl`;
            toast.innerHTML = `<span class="font-mono text-[10px] text-acid uppercase font-bold tracking-[0.3em]">${msg}</span>`;
            container.appendChild(toast);
            setTimeout(() => { toast.classList.add('hiding'); setTimeout(() => toast.remove(), 400); }, 2000);
        }

        function copyToClipboard(text, btn) {
            navigator.clipboard.writeText(text).then(() => {
                showToast("SEQUENCE COPIED");
                const old = btn.innerText; btn.innerText = "SUCCESS";
                setTimeout(() => btn.innerText = old, 1200);
            });
        }
    </script>
</body>
</html>
